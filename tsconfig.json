{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@mailer/*": ["src/modules/mailer/*"],
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  }
}
